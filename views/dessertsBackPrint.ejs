            <script>
                let riojasPage = document.querySelector('#riojas')
                let dessertsBackPaddingSides = document.querySelector('#desserts-back-padding-sides')
                let dessertsBackPaddingBetween = document.querySelector('#desserts-back-padding-between')
                let dessertsBackFontSize = document.querySelector('#desserts-back-font-size')
                let p = document.querySelectorAll('.special')
                let h2 = document.querySelectorAll('h2')
                let clearChanges = document.querySelector('#clear-changes')
                let dessertsBackPrintButton = document.querySelector('#desserts-back-print-button')
                let special = document.querySelectorAll('.special')

                dessertsBackPrintButton.addEventListener('click',(event)=>{
                    event.preventDefault()
                    location.replace('/dessertsBackPrint')
                })
                clearChanges.addEventListener('click',(event)=>{
                    event.preventDefault()
                    location.reload()
                })
                dessertsBackPaddingSides.addEventListener('input', function(evt){
                    riojasPage.style.paddingLeft = `${Number(this.value)}px`
                    riojasPage.style.paddingRight = `${Number(this.value)}px`
                })
                dessertsBackPaddingBetween.addEventListener('input', function(evt){
                    p.forEach((special,i)=>{
                        special.style.paddingTop = `${(Number(this.value))/2}px`
                        special.style.paddingBottom = `${(Number(this.value))/2}px`
                    })
                })
                dessertsBackFontSize.addEventListener('input', function(evt){
                    riojasPage.style.fontSize = `${Number(this.value)}px`
                    h2[0].style.fontSize = `${Number(this.value)}px`
                    h2[1].style.fontSize = `${Number(this.value)}px`
                    h2[2].style.fontSize = `${Number(this.value)}px`
                    h2[3].style.fontSize = `${Number(this.value)}px`
