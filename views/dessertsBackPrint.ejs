                    if (info[i].category == 'controls-desserts-back' && info[i].name == 'padding-between'){ 
                        let half=(info[i].pixels).substring(0,info[i].pixels.length-2)/2
                        %>
                        <%= half%>px
            <%
                    } 
                } 
            %>;
        }
        input{
            text-align: center;
        }
        #flexbox{display:flex;}
        @media (orientation: landscape){
            #flexbox{
                flex-direction: row;
            }
          
        }
        @media (orientation: portrait){
            #flexbox{
                flex-direction: column;
            }
           

        }
        li{
            max-width: none;
        }

        .decaf{
            font-weight: 100;
            font-family: serif;
        }
    </style>
