        }
        #riojas{
            line-height: 
            <%
                for (let i=0; i<info.length; i++){
                    if (info[i].category == 'controls-liquor' && info[i].name == 'lineHeight'){ %>
                        <%= info[i].pixels %>
            <%
                    }
                }
            %>; 
            padding-left:
            <% 
                for (let i=0; i<info.length; i++){
                    if (info[i].category == 'controls-liquor' && info[i].name == 'padding-sides'){ %>
                        <%= info[i].pixels%>
            <%
                    } 
                } 
            %>;
            
            padding-right:
            <% 
                for (let i=0; i<info.length; i++){
                    if (info[i].category == 'controls-liquor' && info[i].name == 'padding-sides'){ %>
                        <%= info[i].pixels%>
            <%
                    } 
                } 
            %>;
            
        }
        
        ul{
            font-family:serif;
        }
        
        #riojas{
            font-size:
            <% 
                for (let i=0; i<info.length; i++){
                    if (info[i].category == 'controls-liquor' && info[i].name == 'liquorFontSize'){ %>
                        <%= info[i].pixels%>
            <%
                    } 
                } 
            %>;

        }
        #riojas li{
            padding-top:            
            <% 
                for (let i=0; i<info.length; i++){
                    if (info[i].category == 'controls-liquor' && info[i].name == 'padding-between'){ 
                        let half=(info[i].pixels).substring(0,info[i].pixels.length-2)/2
                        %>
                        <%= half%>px
            <%
                    } 
                } 
            %>;
            padding-bottom:
            <% 
                for (let i=0; i<info.length; i++){
                    if (info[i].category == 'controls-liquor' && info[i].name == 'padding-between'){ 
                        let half=(info[i].pixels).substring(0,info[i].pixels.length-2)/2
                        %>
                        <%= half%>px
            <%
                    } 
                } 
            %>;
        }
        input{
            text-align: center;
        }
        #flexbox{display:flex;}
        @media (orientation: landscape){
            #flexbox{
                flex-direction: row;
            }
          
        }
        @media (orientation: portrait){
            #flexbox{
                flex-direction: column;
            }
           

        }
        li{
            max-width: none;
        }
    </style>
</head>










