            <script>
                let riojasPage = document.querySelector('#riojas')
                let liquorPaddingSides = document.querySelector('#liquor-padding-sides')
                let liquorPaddingBetween = document.querySelector('#liquor-padding-between')
                let liquorFontSize = document.querySelector('#liquor-font-size')
                let p = document.querySelectorAll('.special')
                let clearChanges = document.querySelector('#clear-changes')
                let liquorPrintPreviewButton = document.querySelector('#liquor-print-preview-button')
                let special = document.querySelectorAll('.special')
                let lineHeight = document.querySelector('#line-height')

                lineHeight.addEventListener('input', function(evt){
                    riojasPage.style.lineHeight = `${Number(this.value)}px`
                })

                liquorPrintPreviewButton.addEventListener('click',(event)=>{
                    event.preventDefault()
                    location.replace('/riojasPrintPreview')
                })
                clearChanges.addEventListener('click',(event)=>{
                    event.preventDefault()
                    location.reload()
                })
                liquorPaddingSides.addEventListener('input', function(evt){
                    riojasPage.style.paddingLeft = `${Number(this.value)}px`
                    riojasPage.style.paddingRight = `${Number(this.value)}px`
                })
                liquorPaddingBetween.addEventListener('input', function(evt){
                    p.forEach((special,i)=>{
                        special.style.paddingTop = `${(Number(this.value))/2}px`
                        special.style.paddingBottom = `${(Number(this.value))/2}px`
                    })
                })
